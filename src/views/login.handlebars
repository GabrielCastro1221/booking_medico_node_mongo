<link rel="stylesheet" href="/css/login/login.css">

<section class="section-padding mt-13 mb-8">
    <div class="container">
        <h3 class="title">
            Hola!
            <span class="welcome-text">Bienvenido</span>
        </h3>
        <form class="form">
            <div class="form-group">
                <input type="email" name="email" placeholder="Ingrese su Email" class="input-field" required />
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Ingrese su Contraseña" class="input-field"
                    required />
            </div>
            <div>
                <button type="submit" class="submit-button">
                    Ingresar
                </button>
            </div>
            <p class="text-center">
                No tienes cuenta?
                <a href="/registro" class="link">Registrate</a>
            </p>
            <p class="text-center">
                Olvidaste tu contraseña?
                <a href="/reset-password" class="link">Recuperar</a>
            </p>
        </form>
    </div>
</section>

<script src="/js/login/login.js"></script>