<link rel="stylesheet" href="/css/contact/contact.css">

<div class="contact-wrapper mt-3">
    <div class="container-contact">
        <div class="left">
            <h3 class="heading">Contactanos</h3>
            <p class="text">Estamos aqui para ti! como podemos ayudarte?</p>
            <form class="contact-form" id="form">
                <div class="inputBox">
                    <input type="text" name="from_name" id="from_name" class="name" placeholder="Ingrese su nombre">
                </div>
                <div class="inputBox">
                    <input type="email" name="from_email" id="from_email" class="email" placeholder="Ingrese su email">
                </div>
                <div class="inputBox">
                    <textarea name="message" id="message" class="message" placeholder="Ingrese su mensaje"></textarea>
                </div>
                <input type="submit" class="contact-btn" id="button" value="Enviar Mensaje">
            </form>
        </div>
        <div class="right">
            <div class="ilustration">
                <img src="/assets/img/favicon.png" alt="">
            </div>
            <div class="contact-info">
                <div class="infoBox">
                    <div class="icon">
                        <i class="fa-solid fa-phone"></i>
                        <a class="text a" href="tel:+573155417708">+57 3155417708</a>
                    </div>
                    <div class="icon">
                        <i class="fa-regular fa-envelope"></i>
                        <a class="text a" href="mailto:example@example.com">example@gmail.com</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="social-icons">
            <a href="#">
                <i class="fa-brands fa-twitter"></i>
            </a>
            <a href="#">
                <i class="fa-brands fa-instagram"></i>
            </a>
            <a href="#">
                <i class="fa-brands fa-linkedin-in"></i>
            </a>
        </div>
    </div>
</div>